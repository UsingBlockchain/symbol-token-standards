{
  "name": "symbol-token-standards",
  "version": "0.2.0",
  "description": "Symbol library to handle Token Standards",
  "author": "NEM Foundation <devs@nem.foundation>",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "symbol-sdk": "^0.18.0",
    "symbol-uri-scheme": "^0.4.3",
    "symbol-hd-wallets": "^0.10.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.9",
    "@types/mocha": "^5.2.7",
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "@typescript-eslint/parser": "^2.15.0",
    "chai": "^4.1.2",
    "coveralls": "^3.0.9",
    "eslint": "^6.8.0",
    "mocha": "^5.2.0",
    "nyc": "^14.1.1",
    "rimraf": "^3.0.2",
    "ts-node": "^7.0.0",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "lint": "eslint src/ --ext .ts && eslint test/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix && eslint test/ --ext .ts --fix",
    "build": "rimraf dist && mkdir dist && tsc",
    "pretest": "npm run build",
    "test": "mocha --ui bdd --recursive ./dist/test",
    "test:cov": "nyc --reporter=lcov --reporter=text-summary npm t",
    "test:coveralls": "npm run test:cov | coveralls",
    "coveralls-report": "cat ./coverage/lcov.info | coveralls",
    "version": "echo $npm_package_version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nemfoundation/symbol-token-standards.git"
  },
  "license": "Apache 2.0",
  "bugs": {
    "url": "https://github.com/nemfoundation/symbol-token-standards/issues"
  },
  "homepage": "https://github.com/nemfoundation/symbol-token-standards#readme",
  "nyc": {
    "exclude": [
      "**/*.spec.js"
    ]
  }
}
